page{
  height: 100%;
}
.category{
  height: 100%;
}
.category_container{
  height: calc(100vh - 90rpx);
  display: flex;
}
.category_container .left_menu{
  flex: 2;
  
}
.category_container .right_content{
  flex: 5;
  
}
.menu_item{
  display: flex;
  height: 80rpx;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
}
.active{
  color: var(--theme-color);
  border-left: 5rpx solid currentColor;
}
.goods_group .goods_title{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.delimiter{
  color: #ccc;
  padding: 0 10rpx;
}
.goods_group .goods_list{
  display: flex;
  flex-wrap: wrap;
  
}
.goods_group .goods_list navigator{
  width: 33.33%;
  text-align: center;

}
.goods_group .goods_list navigator image{
  width: 50%;
}
