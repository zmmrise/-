<view class="goods_list">
  <SearchInput></SearchInput>
  <!-- 监听自定义事件 -->
  <Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
    <block wx:if="{{tabs[0].isActive}}">
      <view class="first_tab">
        <navigator class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id" url="../goods_detail/goods_detail?goods_id={{item.goods_id}}">
        
          <view class="goods_img_wrap">
            <image src="{{item.goods_small_logo ? item.goods_small_logo : 'https://ftp.bmp.ovh/imgs/2020/10/637aea52ba9e64a2.jpg'}}" mode="widthFix"></image>
          </view>
          <view class="goods_info_wrap">
            <view class="goods_name">{{item.goods_name}}</view>
            <view class="goods_price">￥{{item.goods_price}}</view>
          </view>
        </navigator>
      </view>
    </block>
    <block wx:elif="{{tabs[1].isActive}}">2</block>
    <block wx:else>3</block>
  </Tabs>
</view>