page{
  
}
.collect_main{
  background-color: #f3f4f6;
}
.collect_title{
  padding: 40rpx 0;
}
.collect_tips{
  padding: 10rpx 20rpx;
  border: 1rpx solid #ccc;
  margin-left: 25rpx;

}
.active{
  color: var(--theme-color);
  border-color: currentColor;
}

.goods_item{
  display: flex;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
}
.goods_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_img_wrap image{
  width: 70%;
}
.goods_info_wrap{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_info_wrap .goods_name{
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  
}
.goods_price{
  color: var(--theme-color);
  font-size: 32rpx;
}
